doctype html
html
  head      
    link(rel='stylesheet', href='/public/css/bootstrap.min.css')
    link(rel='stylesheet', href='/public/css/bootstrap-theme.min.css')
  body
    nav.navbar.navbar-default(role="navigation")
      .navbar-header
        button(type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/") Todo List
      .collapse.navbar-collapse.navbar-exl-collapse
        ul.nav.navbar-nav.navbar-right
          li
            p.navbar-text 
              a(href='/add') Add an Todo
    .container
      .row
        .col-md-2
        .col-md-6
          .well
            h2 Add a Todo
            form.form-inline(method='POST', action='/')
              input.form-control(type='text', name='description', placeholder='Add Your Todo')
              input.btn.btn-default(type='submit', value='Add')
        .col-md-2
      .row
        .col-md-2
        .col-md-6
          .well
            if todos
              each todo in todos
                .todo
                  h4
                    a.btn.btn-danger Not Completed
                    | &nbsp; #{todo.description}
        .col-md-2
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js", type="text/javascript")
    script(src="/public/js/bootstrap.min.js", type="text/javascript")
